<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <%= link_to task_path(task) do %>
      <li>
        <%=task.completed %> - <%= task.title %>
        <%= link_to "Delete",
        task_path(task),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
      </li>
    <% end %>
  <% end %>
</ul>

<%= link_to "New task", new_task_path %>
